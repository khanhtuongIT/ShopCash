<UserControl x:Class="CashierRegister.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid Style="{StaticResource ContentRoot}" Margin="0">
        <mui:ModernTab x:Name="mtSettingsPage" Layout="List" SelectedSource="/Pages/Settings/About.xaml">
            <mui:ModernTab.Links>
                <mui:Link x:Name="l_about" DisplayName="{StaticResource about}" Source="/Pages/Settings/About.xaml" />
                <mui:Link x:Name="l_appearance" DisplayName="{StaticResource appearance}" Source="/Pages/Settings/Appearance.xaml" />
                <mui:Link x:Name="l_language" DisplayName="{StaticResource language}" Source="/Pages/Settings/Languages.xaml"></mui:Link>
                <mui:Link x:Name="l_help" DisplayName="{StaticResource help}" Source="/Pages/Settings/Help.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
