<mui:ModernDialog x:Class="CashierRegister.Pages.Notification"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300" MaxWidth="9999"
                  Title="{DynamicResource notification}">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->
    <ScrollViewer>
        <StackPanel>
            <TextBlock x:Name="tblNotification" Text="" Foreground="Firebrick" TextWrapping="Wrap"></TextBlock>
            <TextBlock x:Name="tblNote" Text="" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
    </ScrollViewer>
    
</mui:ModernDialog>
