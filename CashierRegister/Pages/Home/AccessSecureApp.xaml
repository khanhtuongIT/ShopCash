<mui:ModernDialog x:Class="CashierRegister.Pages.Home.AccessSecureApp"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300" Height="175" Width="325" MaxWidth="9999"
                  Title="{DynamicResource notification}">
    
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5 0 5 20">
        <TextBlock Text="Email address or password is invalid!" TextWrapping="Wrap"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Or "></TextBlock>
            <TextBlock Text="Turn on " FontStyle="Italic"></TextBlock>
            <TextBlock><Hyperlink x:Name="hplAccessSucureApp" Click="hplAccessSucureApp_Click">Access for less secure app</Hyperlink></TextBlock>
        </StackPanel>
    </StackPanel>
</mui:ModernDialog>
