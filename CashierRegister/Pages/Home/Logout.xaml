<UserControl x:Class="CashierRegister.Pages.Home.Logout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}" Margin="0" Loaded="Grid_Loaded">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="{DynamicResource logout}" Foreground="RoyalBlue" Style="{StaticResource Heading1}" />
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="{DynamicResource are_you_sure_logout}" FontWeight="Medium" />
                    <TextBlock Margin="15 0 0 0"><Hyperlink x:Name="hplYes" Click="hplYes_Click" FontWeight="ExtraBold"><TextBlock Text="{DynamicResource yes}"></TextBlock></Hyperlink></TextBlock>
                    <TextBlock Margin="10 0 0 0"><Hyperlink x:Name="hplNo" Click="hplNo_Click" FontWeight="ExtraBold"><TextBlock Text="{DynamicResource no}"></TextBlock></Hyperlink></TextBlock>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
