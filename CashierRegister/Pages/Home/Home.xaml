             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1320" LayoutUpdated="UserControl_LayoutUpdated" Loaded="UserControl_Loaded" SizeChanged="UserControl_SizeChanged">

    <Grid Margin="0">
        <Grid.ColumnDefinitions>
