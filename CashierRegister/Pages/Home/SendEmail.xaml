                                    <TextBlock x:Name="tblTotal" Text="{DynamicResource total}" FontWeight="Medium" Grid.Row="3" Margin="40 5 0 0" Grid.Column="1" HorizontalAlignment="Right"></TextBlock>
                                </Grid>

