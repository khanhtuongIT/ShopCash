                                        <TextBlock Text=": " FontWeight="Medium"></TextBlock>
                                    </StackPanel>
                                    <TextBlock x:Name="tblPayment" Text="{DynamicResource payment}" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap"></TextBlock>
                                    

