                                        <TextBlock Text=": "></TextBlock>
                                    </StackPanel>
                                    <TextBlock x:Name="tblDatetime" Text="{DynamicResource date}" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap"></TextBlock>
                                </Grid>

