<UserControl x:Class="CashierRegister.Pages.Setting.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="UCSetting" Loaded="UCSetting_Loaded">
    <Grid Style="{StaticResource ContentRoot}" Margin="0">
        <mui:ModernProgressRing x:Name="mpr" Width="100" Height="100" Margin="0,0,0,56" IsActive="False" Style="{StaticResource CircleProgressRingStyle}"></mui:ModernProgressRing>
        <!-- TODO: set @SelectedSource -->
        <mui:ModernTab x:Name="mtSetting" Layout="List"></mui:ModernTab>
    </Grid>
</UserControl>
