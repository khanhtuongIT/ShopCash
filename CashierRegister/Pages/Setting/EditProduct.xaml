        <TextBox x:Name="txbCountry" MaxLength="100" GotFocus="txbTextBox_GotFocus" Grid.Row="8" Grid.Column="1" Margin="0,0,0,10"></TextBox>
        
        <TextBlock Text="{DynamicResource taxable}" VerticalAlignment="Center" FontWeight="Medium" Grid.Row="9" Margin="0,0,0,10"></TextBlock>
        <CheckBox x:Name="chkTax" GotFocus="txbTextBox_GotFocus" IsChecked="True" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="25" Grid.Row="9" Grid.Column="1" Margin="0,0,0,10"></CheckBox>

        <TextBlock Text="{DynamicResource active}" VerticalAlignment="Center" FontWeight="Medium" Grid.Row="10" Margin="0,0,0,10"></TextBlock>
        <CheckBox x:Name="chkActive" GotFocus="txbTextBox_GotFocus" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" Margin="0,0,0,10" Grid.Row="10" Grid.Column="1" ></CheckBox>

        <StackPanel Orientation="Horizontal" Grid.Row="11" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button x:Name="muiBtnOK" Click="muiBtnOK_Click" GotFocus="txbTextBox_GotFocus" Margin="0,0,5,0" Width="80" Content="{DynamicResource ok}"></Button>
            <Button x:Name="muiBtnCancel" Click="muiBtnCancel_Click" GotFocus="txbTextBox_GotFocus" Width="80" Content="{DynamicResource cancel}"></Button>
        </StackPanel>

        <TextBlock x:Name="tblNotification" Margin="0,20,0,0" Foreground="Firebrick" Text="" VerticalAlignment="Bottom" Grid.Row="12" Grid.ColumnSpan="2"></TextBlock>
    </Grid>
</mui:ModernDialog>
