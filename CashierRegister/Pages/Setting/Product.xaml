                        </ComboBox>-->
                    </Grid>
                </StackPanel>

                <!--<ScrollViewer x:Name="scrvRight" Grid.Row="1">-->
                <mui:ModernProgressRing x:Name="mprpro" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100" Margin="0,0,0,56" IsActive="False" Style="{StaticResource CircleProgressRingStyle}"></mui:ModernProgressRing>

                <DataGrid x:Name="dtgProduct" Visibility="Hidden" MouseDoubleClick="dtgProduct_MouseDoubleClick" HeadersVisibility="Column" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" RowDetailsVisibilityMode="Collapsed">
                    <DataGrid.Columns>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <CheckBox x:Name="chkCheckAll" Checked="chkCheckAll_Checked" HorizontalContentAlignment="Center" Unchecked="chkCheckAll_Unchecked">
                                    <CheckBox.ToolTip>
                                        <TextBlock Text="{DynamicResource select_all_product}"></TextBlock>
                                    </CheckBox.ToolTip>
                                </CheckBox>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Path=CheckDel}" VerticalAlignment="Center" Margin="4,0,0,0" Checked="chkCheckDel_Checked" Unchecked="chkCheckDel_Unchecked">
                                        <CheckBox.ToolTip>
                                            <TextBlock Text="{DynamicResource select_this_product}"></TextBlock>
                                        </CheckBox.ToolTip>
                                    </CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource image}"></TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Path=BitmapImage}" HorizontalAlignment="Left" Height="30" Width="30">
                                        <Image.ToolTip>
                                            <Image Source="{Binding Path=BitmapImage}" Width="100" Height="100"></Image>
                                        </Image.ToolTip>
                                    </Image>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


