                <StackPanel Margin="0 15 0 10" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="1" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="53"></ColumnDefinition>
                            <ColumnDefinition Width="120"></ColumnDefinition>
                            <ColumnDefinition Width="210"></ColumnDefinition>
                            <!--<ColumnDefinition Width="100"></ColumnDefinition>-->
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{DynamicResource giftcard_sortby}" Margin="0 8 0 0"></TextBlock>
                        <ComboBox Grid.Column="1" x:Name="cb_SortBy_prod" SelectionChanged="cb_SortBy_prod_SelectionChanged" Padding="10 8 0 0">
                        </ComboBox>
