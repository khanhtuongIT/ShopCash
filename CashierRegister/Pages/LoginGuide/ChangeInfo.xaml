<UserControl x:Class="CashierRegister.Pages.LoginGuide.ChangeInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashierRegister.Pages.LoginGuide"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="430">
    <StackPanel Orientation="Vertical" Margin="3">
        <TextBlock Text="{DynamicResource change_per_info}" Style="{StaticResource Heading2}" Foreground="#FF212121" FontSize="20" Margin="0 0 0 15"></TextBlock>
        <TextBlock Text="{DynamicResource click_change}" Margin="0 0 0 5" TextWrapping="Wrap"></TextBlock>
        <Image x:Name="imgHiAdminRequest" Source="pack://application:,,,/Resources/login_guide/info.png" Stretch="None" Margin="0"></Image>
        <TextBlock Text="{DynamicResource save_personal_information}" Margin="0 0 0 5"></TextBlock>
        <Image x:Name="imgChangeInfo" Source="pack://application:,,,/Resources/login_guide/change_info.png" Stretch="None"></Image>
        <TextBlock Text="{DynamicResource change_your_password}" Margin="0 0 0 5"></TextBlock>
    </StackPanel>
</UserControl>
