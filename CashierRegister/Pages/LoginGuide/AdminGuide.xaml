<UserControl x:Class="CashierRegister.Pages.LoginGuide.AdminGuide"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashierRegister.Pages.LoginGuide"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="430">
    
    <StackPanel Orientation="Vertical" Margin="3">
        <TextBlock Text="{DynamicResource admin_account}" Style="{StaticResource Heading2}" Foreground="#FF212121" FontSize="20" Margin="0 0 0 15"></TextBlock>
        <TextBlock Text="{DynamicResource admin_func}" Margin="0 0 0 5" FontStyle="Italic" TextWrapping="Wrap"></TextBlock>
        <TextBlock Text="{DynamicResource click_login}" Margin="0 0 0 5" FontWeight="Medium"></TextBlock>
        <Image Source="pack://application:,,,/Resources/login_guide/a1.png" x:Name="imgLoginRequest" Stretch="None" Margin="0 0 0 10"></Image>
        <TextBlock Text="{DynamicResource default_user_pass}" Margin="0 0 0 5" FontWeight="Medium"></TextBlock>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
            <TextBlock Text="+ "></TextBlock>
            <TextBlock Text="{DynamicResource username}"></TextBlock>
            <TextBlock Text=": admin"></TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 5">
            <TextBlock Text="+ "></TextBlock>
            <TextBlock Text="{DynamicResource password}"></TextBlock>
            <TextBlock Text=": admin"></TextBlock>
        </StackPanel>
        <Image Source="pack://application:,,,/Resources/login_guide/a2.png" x:Name="imgLogin" Stretch="None"></Image>
    </StackPanel>
</UserControl>
